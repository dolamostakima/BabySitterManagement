<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SmartBabySitter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .app-wrap {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background: #111827;
            color: #fff;
        }

            .sidebar .brand {
                padding: 16px;
                font-weight: 700;
                border-bottom: 1px solid rgba(255,255,255,.08);
            }

            .sidebar .menu {
                padding: 10px;
            }

            .sidebar a {
                color: #cbd5e1;
                text-decoration: none;
                display: block;
                padding: 10px 12px;
                border-radius: 10px;
            }

                .sidebar a:hover {
                    background: rgba(255,255,255,.08);
                    color: #fff;
                }

                .sidebar a.active {
                    background: rgba(255,255,255,.14);
                    color: #fff;
                }

            .sidebar .section {
                margin-top: 12px;
                padding: 8px 12px;
                font-size: 12px;
                text-transform: uppercase;
                color: #94a3b8;
            }

        .content {
            flex: 1;
            background: #f8fafc;
        }

        .topbar {
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
            padding: 10px 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .user-pill {
            font-size: 13px;
            color: #334155;
        }
    </style>
</head>

<body>
    <div class="app-wrap">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="brand">SmartBabySitter</div>
            <div class="menu" id="sidebarMenu"></div>
        </aside>

        <!-- Main -->
        <div class="content">
            <div class="topbar">
                <div><b id="pageTitle">@ViewData["Title"]</b></div>
                <div class="d-flex gap-2 align-items-center">
                    <span class="user-pill" id="userInfo"></span>
                    <button class="btn btn-sm btn-outline-dark" id="btnLogout" onclick="logout()" style="display:none;">Logout</button>
                </div>
            </div>

            <main class="container my-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // ---------------- Config ----------------
        const API_BASE = ""; // same domain => ""
        function getToken() { return localStorage.getItem("jwt_token"); }
        function setToken(t) { localStorage.setItem("jwt_token", t); }
        function getRoles() {
          try { return JSON.parse(localStorage.getItem("user_roles") || "[]"); }
          catch { return []; }
        }
        function isLoggedIn() { return !!getToken(); }
        function hasRole(role) { return getRoles().includes(role); }

        function logout() {
          localStorage.removeItem("jwt_token");
          localStorage.removeItem("user_roles");
          localStorage.removeItem("user_email");
          location.href = "/Web/Login";
        }

        // JWT attach for all ajax
        $.ajaxSetup({
          beforeSend: function(xhr){
            const t = getToken();
            if(t) xhr.setRequestHeader("Authorization", "Bearer " + t);
          }
        });

        // ---------------- Menu Definitions ----------------
        const MENU = {
          parent: [
            { section:"Parent" },
            { text:"Search Sitters", url:"/Web/Sitters" },
            { text:"My Bookings", url:"/Web/ParentBookings" },
            { text:"Favorites", url:"/Web/Favorites" },          // (page add করবে)
            { text:"Notifications", url:"/Web/Notifications" }   // (page add করবে)
          ],
          sitter: [
            { section:"BabySitter" },
            { text:"My Profile", url:"/Web/SitterProfile" },     // (page add করবে)
            { text:"Availability", url:"/Web/SitterAvailability" }, // (page add করবে)
            { text:"Bookings", url:"/Web/SitterBookings" },
            { text:"Notifications", url:"/Web/Notifications" }
          ],
          admin: [
            { section:"Admin" },
            { text:"Dashboard", url:"/Web/AdminDashboard" },
            { text:"Sitters Approval", url:"/Web/AdminSitters" },
            { text:"Bookings", url:"/Web/AdminBookings" },
            { text:"Users", url:"/Web/AdminUsers" },
            { text:"Payments", url:"/Web/AdminPayments" }
          ]
        };


                function renderSidebar() {
          const path = location.pathname.toLowerCase();
          const logged = isLoggedIn();

          // base menu
          let guestItems = [
            { text: "Home", url: "/Web/Index" },
            { text: "Search Sitters", url: "/Web/Sitters" },
            { text: "Login", url: "/Web/Login" },
            { text: "Register", url: "/Web/Register" }
          ];

          // ✅ login থাকলে Login/Register বাদ
          if (logged) {
            guestItems = guestItems.filter(x => x.url !== "/Web/Login" && x.url !== "/Web/Register");
          }

          let roleItems = [];

          if (!logged) {
            roleItems = []; // guest only
            $("#userInfo").text("Guest");
            $("#btnLogout").hide();
          } else {
            const roles = getRoles();
            $("#userInfo").text((localStorage.getItem("user_email") || "") + " (" + roles.join(", ") + ")");
            $("#btnLogout").show();

            // role priority: Admin > BabySitter > Parent
            if (roles.includes("Admin")) roleItems = MENU.admin;
            else if (roles.includes("BabySitter")) roleItems = MENU.sitter;
            else roleItems = MENU.parent;
          }

          const items = [...guestItems, ...roleItems];

          let html = "";
          items.forEach(x => {
            if (x.section) {
              html += `<div class="section">${x.section}</div>`;
              return;
            }
            const active = path === x.url.toLowerCase() ? "active" : "";
            html += `<a class="${active}" href="${x.url}">${x.text}</a>`;
          });

          $("#sidebarMenu").html(html);
        }

        // ---------------- Page Guard (role required) ----------------
        // যেসব page role-based (দেখাতে হবে), এখানে define করো:
        const PAGE_RULES = [
          { prefix: "/web/admindashboard", roles: ["Admin"] },
          { prefix: "/web/adminsitters", roles: ["Admin"] },
          { prefix: "/web/adminbookings", roles: ["Admin"] },
          { prefix: "/web/adminusers", roles: ["Admin"] },
          { prefix: "/web/adminpayments", roles: ["Admin"] },

          { prefix: "/web/parentbookings", roles: ["Parent"] },
          { prefix: "/web/favorites", roles: ["Parent"] },

          { prefix: "/web/sitterbookings", roles: ["BabySitter"] },
          { prefix: "/web/sitterprofile", roles: ["BabySitter"] },
          { prefix: "/web/sitteravailability", roles: ["BabySitter"] }
        ];

        function enforcePageRules(){
          const path = location.pathname.toLowerCase();
          const rule = PAGE_RULES.find(r => path.startsWith(r.prefix));
          if(!rule) return;

          if(!isLoggedIn()){
            location.href = "/Web/Login";
            return;
          }

          const roles = getRoles();
          const ok = rule.roles.some(rr => roles.includes(rr));
          if(!ok){
            // unauthorized => home
            location.href = "/Web/Index";
          }
        }

        // init
        renderSidebar();
        enforcePageRules();

         function showMsg(selector, msg, type) {
            const cls = type === "ok" ? "alert-success" : "alert-danger";
            $(selector).html(`<div class="alert ${cls}">${msg}</div>`);
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>